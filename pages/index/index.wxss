.container{
  padding:0 40rpx;
  height: 100vh;
}
.imgblock{
  width: 100%;
  height: 450rpx;
}
.imgwrap{
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 40rpx;
}
.hoveron{
  opacity: .8;
}
.imginfo{
  display: flex;
  width: 100%;
  flex-direction:row;
  justify-content: space-between;
  padding:20rpx 0 40rpx 0;

}
.imginfoleft{
  flex-basis: auto;
  text-align: left;
  display: flex;
  flex-direction: column;
}
.imginforight{
  text-align: center;
  flex-basis: 100rpx;
  line-height: 30rpx;
}
.title{
  font-weight: bold;
  font-size: 40rpx;
  }
.subtitle{
  font-size: 24rpx;
  color:#ccc;
  padding-top: 22rpx;
  font-weight: bold;
}
.pho{
  width: 80rpx;
  height: 80rpx;
}
.phoname{
  font-size: 24rpx;
  color:#ccc;
  text-align: center;
}